<script>

    var first = true;

    $('#stats').on('inview', function(event, isInView) {
        console.log("Here!!!");
        if (isInView && first) {
            first = false;
            $.ajax({
                url: "/statistics",
                type: "post",
                data: { key: "value" }, // Encrypt all data...
                datatype: 'json',
                crossDomain: true,

                success: function(response){
                    var install = response["install"];
                    var user = response["user"];
                    var content = response["content"];
                    if (user != null && install != null & content != null) {
                        $("#user").html("<h2>" + user + "</h2>");
                        $("#install").html("<h2>" + install + "</h2>");
                        $("#content").html("<h2>" + content + "</h2>");
                    } else {
                        $("#user").html("<h2>---</h2>");
                        $("#install").html("<h2>---</h2>");
                        $("#content").html("<h2>---</h2>");
                    }
                },

                error: function(request, status, error) {
                    $("#user").html("<h2>---</h2>");
                    $("#install").html("<h2>---</h2>");
                    $("#content").html("<h2>---</h2>");
                }
            });
        }
    });
</script>